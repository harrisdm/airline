<!DOCTYPE html>
<html>
<head>
  <title>Airline</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- Display Feature Here it comes  -->

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Crash & Burn </a>
        </div>

        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li> <%= link_to "Home", root_path %>  </li>
            <!-- If Admin user , Display List of users -->
            <% if @current_user.present? && @current_user.admin? %>
            <li>  <%=link_to('Show Users' ,users_path) %> </li>
            <% end %>
            <% if logged_in? %> <!--  used session Helper for-->
                  <li><%= link_to "Profile", current_user %></li>
                  <li> <%= link_to('Edit Profile' ,edit_users_path) %> </li>
                  <li> <%= link_to("log out", logout_path, :confirm => 'Are you sure?') %></li>
      
            <!-- if the user has not logged on   -->
             <% else  %>
               <li> <%= link_to('Sign Up' , signup_path) %></li>
               <li> <%= link_to('Log in', login_path) %></li>
            <% end %>
            
          </ul>
        
        </div>
      </div>
  </nav>



  <!-- end of display  -->





<%= yield %>

</body>
</html>
