<!DOCTYPE html>
<html>
<head>
  <title>Airline</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <ul>
    <li> <%= link_to "Home", root_path %>  </li>
     <!-- If Admin user , Display List of users -->
    <% if @current_user.present? && @current_user.admin? %>
      <li>  <%=link_to('Show Users' ,users_path) %> </li>
    <% end %>
    <% if logged_in? %> <!--  used session Helper for-->
      <ul class="dropdown-menu">
        <li><%= link_to "Profile", current_user %></li>
        <li> <%= link_to('Edit Profile' ,edit_users_path) %> </li>
        <li> <%= link_to("log out",logout_path, :method => :delete, :confirm => 'Are you sure?') %></li>
       </ul>
     <!-- if the user has not logged on   -->
    <% else  %>
       <li> <%= link_to('Sign Up' , signup_path) %></li>
       <li> <%= link_to('Log in', login_path) %></li>
     <% end %>
   </ul>
</nav>
<%= yield %>

</body>
</html>
